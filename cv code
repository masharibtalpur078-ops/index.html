import React, { useState } from 'react';
import { Sparkles, Download, Loader2 } from 'lucide-react';

export default function CVGenerator() {
  const [formData, setFormData] = useState({
    fullName: '',
    email: '',
    phone: '',
    location: '',
    summary: '',
    experience: '',
    education: '',
    skills: '',
  });
  
  const [generatedCV, setGeneratedCV] = useState('');
  const [loading, setLoading] = useState(false);
  const [joke, setJoke] = useState('');
  const [funFact, setFunFact] = useState('');

  const jokes = [
    "Why do programmers prefer dark mode? Because light attracts bugs! ðŸ›",
    "Why did the CV go to therapy? It had too many issues to address! ðŸ˜„",
    "What's a CV's favorite exercise? Job-jumping jacks! ðŸ’ª",
    "Why don't CVs ever win at poker? They always fold under pressure! ðŸƒ",
    "How does a CV stay in shape? By working out its experience section! ðŸ‹ï¸"
  ];

  const funFacts = [
    "ðŸ’¡ Did you know? The word 'resume' comes from French meaning 'summary'",
    "ðŸŽ¯ Fun fact: The first CV was written by Leonardo da Vinci in 1482!",
    "ðŸ“Š Studies show CVs with clear formatting get 40% more callbacks",
    "â° Recruiters spend an average of 6-7 seconds on a CV initially",
    "ðŸŒŸ Your CV is your personal marketing document - make it shine!"
  ];

  const handleInputChange = (e) => {
    setFormData({
      ...formData,
      [e.target.name]: e.target.value
    });
  };

  const generateCV = async () => {
    if (!formData.fullName) {
      alert('Please enter at least your name!');
      return;
    }

    setLoading(true);
    setJoke(jokes[Math.floor(Math.random() * jokes.length)]);
    setFunFact(funFacts[Math.floor(Math.random() * funFacts.length)]);

    try {
      const response = await fetch("http://localhost:5678/webhook/Resume", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          fullName: formData.fullName,
          email: formData.email,
          phone: formData.phone,
          location: formData.location,
          summary: formData.summary,
          experience: formData.experience,
          education: formData.education,
          skills: formData.skills
        })
      });

      if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
      }

      const data = await response.json();
      
      // Handle different response formats
      if (data.cv || data.resume || data.generatedCV) {
        setGeneratedCV(data.cv || data.resume || data.generatedCV);
      } else if (typeof data === 'string') {
        setGeneratedCV(data);
      } else {
        setGeneratedCV(JSON.stringify(data, null, 2));
      }
      
    } catch (error) {
      console.error('Error generating CV:', error);
      setGeneratedCV('Error generating CV. Please make sure your webhook server is running at http://localhost:5678/webhook/Resume');
    } finally {
      setLoading(false);
    }
  };

  const saveCV = () => {
    if (!generatedCV) {
      alert('Generate a CV first!');
      return;
    }

    const blob = new Blob([generatedCV], { type: 'text/plain' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = `${formData.fullName.replace(/\s+/g, '_')}_CV.txt`;
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    URL.revokeObjectURL(url);
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white">
      <div className="container mx-auto p-6">
        <h1 className="text-4xl font-bold text-center mb-8 text-white">
          âœ¨ AI CV Generator âœ¨
        </h1>
        
        <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
          {/* Left Side - Input Form */}
          <div className="bg-white text-black rounded-lg shadow-2xl p-6">
            <h2 className="text-2xl font-bold mb-4 flex items-center gap-2">
              <Sparkles className="w-6 h-6" />
              Your Information
            </h2>
            
            <div className="space-y-4">
              <div>
                <label className="block text-sm font-semibold mb-1">Full Name *</label>
                <input
                  type="text"
                  name="fullName"
                  value={formData.fullName}
                  onChange={handleInputChange}
                  className="w-full p-2 border-2 border-gray-300 rounded focus:border-blue-500 focus:outline-none"
                  placeholder="John Doe"
                />
              </div>

              <div>
                <label className="block text-sm font-semibold mb-1">Email</label>
                <input
                  type="email"
                  name="email"
                  value={formData.email}
                  onChange={handleInputChange}
                  className="w-full p-2 border-2 border-gray-300 rounded focus:border-blue-500 focus:outline-none"
                  placeholder="john@example.com"
                />
              </div>

              <div>
                <label className="block text-sm font-semibold mb-1">Phone</label>
                <input
                  type="tel"
                  name="phone"
                  value={formData.phone}
                  onChange={handleInputChange}
                  className="w-full p-2 border-2 border-gray-300 rounded focus:border-blue-500 focus:outline-none"
                  placeholder="+1 234 567 8900"
                />
              </div>

              <div>
                <label className="block text-sm font-semibold mb-1">Location</label>
                <input
                  type="text"
                  name="location"
                  value={formData.location}
                  onChange={handleInputChange}
                  className="w-full p-2 border-2 border-gray-300 rounded focus:border-blue-500 focus:outline-none"
                  placeholder="New York, USA"
                />
              </div>

              <div>
                <label className="block text-sm font-semibold mb-1">Professional Summary</label>
                <textarea
                  name="summary"
                  value={formData.summary}
                  onChange={handleInputChange}
                  className="w-full p-2 border-2 border-gray-300 rounded focus:border-blue-500 focus:outline-none"
                  rows="3"
                  placeholder="Brief overview of your professional background..."
                />
              </div>

              <div>
                <label className="block text-sm font-semibold mb-1">Work Experience</label>
                <textarea
                  name="experience"
                  value={formData.experience}
                  onChange={handleInputChange}
                  className="w-full p-2 border-2 border-gray-300 rounded focus:border-blue-500 focus:outline-none"
                  rows="4"
                  placeholder="Job Title | Company | Dates&#10;â€¢ Achievement 1&#10;â€¢ Achievement 2"
                />
              </div>

              <div>
                <label className="block text-sm font-semibold mb-1">Education</label>
                <textarea
                  name="education"
                  value={formData.education}
                  onChange={handleInputChange}
                  className="w-full p-2 border-2 border-gray-300 rounded focus:border-blue-500 focus:outline-none"
                  rows="2"
                  placeholder="Degree | University | Year"
                />
              </div>

              <div>
                <label className="block text-sm font-semibold mb-1">Skills</label>
                <textarea
                  name="skills"
                  value={formData.skills}
                  onChange={handleInputChange}
                  className="w-full p-2 border-2 border-gray-300 rounded focus:border-blue-500 focus:outline-none"
                  rows="2"
                  placeholder="JavaScript, React, Python, Communication..."
                />
              </div>

              <button
                onClick={generateCV}
                disabled={loading}
                className="w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white font-bold py-3 px-6 rounded-lg hover:from-blue-700 hover:to-purple-700 transition-all transform hover:scale-105 disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center gap-2"
              >
                {loading ? (
                  <>
                    <Loader2 className="w-5 h-5 animate-spin" />
                    Generating Your CV...
                  </>
                ) : (
                  <>
                    <Sparkles className="w-5 h-5" />
                    Generate CV with AI
                  </>
                )}
              </button>
            </div>
          </div>

          {/* Right Side - Generated CV & Entertainment */}
          <div className="bg-white text-black rounded-lg shadow-2xl p-6 flex flex-col">
            <div className="flex justify-between items-center mb-4">
              <h2 className="text-2xl font-bold">Your Professional CV</h2>
              <button
                onClick={saveCV}
                className="bg-green-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-green-700 transition-all flex items-center gap-2"
              >
                <Download className="w-4 h-4" />
                Save CV
              </button>
            </div>

            <div className="flex-1 bg-gray-50 rounded-lg p-4 mb-4 overflow-y-auto border-2 border-gray-200" style={{ minHeight: '400px' }}>
              {loading ? (
                <div className="flex flex-col items-center justify-center h-full">
                  <Loader2 className="w-12 h-12 animate-spin text-blue-600 mb-4" />
                  <p className="text-gray-600">Creating your professional CV...</p>
                </div>
              ) : generatedCV ? (
                <pre className="whitespace-pre-wrap font-sans text-sm">{generatedCV}</pre>
              ) : (
                <div className="flex items-center justify-center h-full text-gray-400">
                  Fill in your details and click Generate CV!
                </div>
              )}
            </div>

            {/* Entertainment Section */}
            <div className="bg-gradient-to-r from-purple-100 to-blue-100 rounded-lg p-4 space-y-3">
              <h3 className="font-bold text-lg text-purple-800">ðŸŽ‰ While You Wait...</h3>
              
              {joke && (
                <div className="bg-white rounded-lg p-3 shadow">
                  <p className="text-sm font-semibold text-purple-700 mb-1">ðŸ˜„ Joke Time:</p>
                  <p className="text-sm">{joke}</p>
                </div>
              )}
              
              {funFact && (
                <div className="bg-white rounded-lg p-3 shadow">
                  <p className="text-sm font-semibold text-blue-700 mb-1">ðŸ’¡ Fun Fact:</p>
                  <p className="text-sm">{funFact}</p>
                </div>
              )}

              {!joke && !funFact && (
                <p className="text-sm text-gray-600 italic">
                  Generate your CV to see some fun content! ðŸŽˆ
                </p>
              )}
            </div>
          </div>
        </div>
      </div>
    </div>
  );
}
